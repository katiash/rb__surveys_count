<form action="/surveys" method='post' id="survey_form_id">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for:"survey[your_name]"> Your Name: </label>
    <%# <input type="text" name="first_name"> %>
    <input type="text" name="survey[your_name]" placeholder="Your name">
    <label for: "survey[dojo_loc]">Dojo Location</label>
    <select name="survey[dojo_loc]">
        <option value="sj">San Jose, CA</option>
        <option value="be">Berkeley, CA</option>
        <option value="se">Seattle, WA</option>
        <option value="au">Austin, TX</option>
    </select>
    <label for: "survey[fave_lang]">Favourite Language</label>
    <select name="survey[fave_lang]">
        <option value="Py">Python / Django </option>
        <option value="Ru">Ruby on Rails</option>
        <option value="JS">Web Fundametals (JS/HTML/CSS)</option>
        <option value="Me">MEAN Stack</option>
    </select>
    <label for:"survey[comment]">Comment (Optional):</label>
    <input type="textarea" name="survey[comment]" placeholder="Optional Comment Here!">
    <input type='submit' value='Submit'>
</form>
